[alias]
  # git hook commands
  add-upstream = !.git/hooks/add-upstream
  ctags = !.git/hooks/ctags
  cscope-gen = !.git/hooks/cscope-gen
  http-2-ssh = !.git/hooks/http-2-ssh
  ssh-2-http = !.git/hooks/ssh-2-http
  submodule-upgrade = !.git/hooks/submodule-upgrade
  submodule-remove = !.git/hooks/submodule-remove
  update-hooks = !rm -rf .git/hooks/* && git init
