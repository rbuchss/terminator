# If not running interactively, don't do anything
if [[ -n "$PS1" ]]; then
  source $HOME/.bash_func
  source $HOME/.bash_legacy_styles

  export ColorOff="\[\033[0m\]"       # Text Reset
  export NewLine="\n"

  # default profile colors
  export UserColor=$(color_code "38;5;39m")
  export HostColor=$(color_code "0;94m")
  export PathColor=$(color_code "0;93m")

  export Time24h="\t"
  export PathShort="\W"
  export Jobs="\j"

  export UserName="\u"
  export HostName="\h"
  export PathFull="\w"

  # git characters
  export branch_char=⭠
  export check_char=✔
  export detached_head_char=➦
  export diff_char=±
  export x_char=✘

  # misc characters
  export arrow_char=➜
  export nofill_star_char=☆
  export notes_char=♫
  export star_char=★
  export volt_char=⚡
  export yingyang_char=☯
  export ogham_or_char=ᚖ
  export shadowed_cicle_char=❍
  export SEGMENT_SEPARATOR=⮀

  # make less and man pages more readable
  export LESS_TERMCAP_mb=$(printf "\e[1;31m")
  export LESS_TERMCAP_md=$(printf "\e[1;31m")
  export LESS_TERMCAP_me=$(printf "\e[0m")
  export LESS_TERMCAP_se=$(printf "\e[0m")
  export LESS_TERMCAP_so=$(printf "\e[1;44;33m")
  export LESS_TERMCAP_ue=$(printf "\e[0m")
  export LESS_TERMCAP_us=$(printf "\e[1;32m")
fi
